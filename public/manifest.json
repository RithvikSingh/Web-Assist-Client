{
    "manifest_version": 3,
    "name": "Webpage Summarizer",
    "description": "A Chrome extension that summarizes web pages.",
    "version": "1.0",
    "action": {
      "default_popup": "index.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["content.css"]
      }
    ]
  }
  